@page "/"
@page "/home"
@inherits Sudoku.Pages.HomePage


<MudContainer id="title"
    Class="pa-4 mt-2 flex-grow-1" 
    Elevation="0" 
    Fixed>
        <MudText Typo="Typo.h1" Align="Align.Center">Sudoku</MudText>
        <MudText Typo="Typo.h1" Align="Align.Center">Master</MudText>
</MudContainer>

<MudContainer id="bottom"
    Class="pa-4 ma-2" 
    Elevation="0">
    @if (GameOnGoing)
    {
        <MudButton id="Continue"
            Variant="Variant.Filled"
            Class="pa-4 mt-4"
               FullWidth="true"
               Color=Color.Primary
               Size=Size.Large
               OnClick="NavigateToSudokuPage">
            Continue
        </MudButton>
    }
    <MudButton id="NewGame"
            Class="pa-4 mt-4"
               Variant="Variant.Filled"
               FullWidth="true"
               Size=Size.Large
               Color=@(!GameOnGoing ? Color.Primary : Color.Secondary)
               OnClick="NavigateToCreateNewBoardPage">
        New Game
    </MudButton>

    <MudButton id="About"
    Class="pa-4 mt-4"
               Variant="Variant.Filled"
               FullWidth="true"
               Size=Size.Large
               OnClick="NavigateToAboutPage">
        About
    </MudButton>
</MudContainer>