@page "/newboard"
@inherits NewBoardPage

<MudAppBar Class="pl-0" Elevation=0>
    <MudIconButton Icon="@Icons.Filled.ArrowBackIosNew"
                   Color=Color.Inherit
                   Class="pl-0 ml-0"
                   Size=MudBlazor.Size.Large
                   OnClick="NavigateToHome"></MudIconButton>
    <MudContainer Class="d-flex justify-center">
        <MudText Typo="Typo.h5">
            Start a new game
        </MudText>
    </MudContainer>
</MudAppBar>
<MudContainer Class=" d-flex flex-grow-1 align-center">
            <MudText Align=Align.Center
                     Typo=Typo.h3> Which challenge will you succeed?</MudText>
    </MudContainer>
    <MudContainer>
        <MudButton id="easy"
                   Variant="Variant.Filled"
                   Class="pa-4 mt-4"
                   FullWidth="true"
                   Color=Color.Primary
                   Size=Size.Large
                   OnClick="@( e => CreateNewBoardAndNavigateToTheGamePage(Board.SudokuLevelType.easy) )">
            Easy
        </MudButton>
        <MudButton id="medium"
                   Variant="Variant.Filled"
                   Class="pa-4 mt-4"
                   FullWidth="true"
                   Color=Color.Primary
                   Size=Size.Large
                   OnClick="@( e => CreateNewBoardAndNavigateToTheGamePage(Board.SudokuLevelType.medium) )">
            Medium
        </MudButton>
        <MudButton id="expert"
                   Variant="Variant.Filled"
                   Class="pa-4 mt-4"
                   FullWidth="true"
                   Color=Color.Primary
                   Size=Size.Large
                   OnClick="@( e => CreateNewBoardAndNavigateToTheGamePage(Board.SudokuLevelType.complex) )">
            Expert
        </MudButton>
        <MudButton id="master"
                   Variant="Variant.Filled"
                   Class="pa-4 mt-4"
                   FullWidth="true"
                   Color=Color.Primary
                   Size=Size.Large
                   OnClick="@( e => CreateNewBoardAndNavigateToTheGamePage(Board.SudokuLevelType.veryComplex) )">
            Expert
        </MudButton>
    </MudContainer>
